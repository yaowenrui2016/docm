<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="indi.aby.docm.core.account.DeptMapper">
    <resultMap id="DeptEntity" type="indi.aby.docm.core.account.DeptEntity"
               extends="indi.rui.common.web.dao.IMapper.AbstractData">
    </resultMap>

    <insert id="add">
        insert into t_dept (id, name) values (#{id}, #{name})
    </insert>
    <update id="update">
        update t_dept set name = #{name} where id = #{id}
    </update>
    <delete id="delete">
        delete from t_dept where id = #{id}
    </delete>
    <select id="findTotalNum" resultType="java.lang.Integer">
        select count(*) from t_dept
        where state = '1'
        <if test="conditions.keywords != null and conditions.keywords.size > 0">
            and(
            <foreach collection="conditions.keywords" open="(" close=")" item="keyword" separator="and">
                name like '%${keyword}%'
            </foreach>
            )
        </if>
    </select>
    <select id="findAll" resultMap="DeptEntity">
        select * from t_dept
        where state = '1'
        <if test="conditions.keywords != null and conditions.keywords.size > 0">
            and(
            <foreach collection="conditions.keywords" open="(" close=")" item="keyword" separator="and">
                name like '%${keyword}%'
            </foreach>
            )
        </if>
        order by
        <choose>
            <when test="sorters.size > 0">
                <foreach collection="sorters.entrySet()" index="key" item="value" separator=",">
                    ${key} ${value}
                </foreach>
            </when>
            <otherwise>
                create_time asc
            </otherwise>
        </choose>
        limit #{offset}, #{pageSize}
    </select>
    <select id="findById" resultType="indi.aby.docm.core.account.DeptEntity">
        select * from t_dept where id = #{id}
    </select>
    <select id="findByName" resultType="indi.aby.docm.core.account.DeptEntity">
        select * from t_dept where name = #{name}
    </select>
    <select id="getAll" resultMap="DeptEntity">
        select * from t_dept order by create_time asc limit 0, 1000
    </select>
</mapper>