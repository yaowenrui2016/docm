<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="indi.aby.docm.core.contract.PayItemMapper">
    <resultMap id="PayItemEntity" type="indi.aby.docm.core.contract.PayItemEntity"
               extends="indi.rui.common.web.dao.IMapper.AbstractData">
        <result column="order" property="order"/>
        <result column="money" property="money"/>
        <result column="credential_num" property="credentialNum"/>
        <result column="credential_time" property="credentialTime"/>
        <result column="desc" property="desc"/>
    </resultMap>

    <insert id="add">
        insert into t_pay_item (id, order,
        money, credential_num, credential_time,
        contract_id, desc)
        values (#{id}, #{order},
        #{money}, #{credentialNum}, #{credentialTime},
        #{contract.id}, #{desc})
    </insert>
    <delete id="delete">
        delete from t_pay_item where id = #{id}
    </delete>
    <delete id="deleteAll">
        delete from t_pay_item where contract_id = #{contractId}
    </delete>
</mapper>