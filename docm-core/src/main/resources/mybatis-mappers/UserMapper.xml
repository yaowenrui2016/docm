<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="indi.aby.docm.core.dao.UserMapper">
    <insert id="add">
        insert into t_user(id, name, username, password, phone)
        values (#{id}, #{name}, #{username}, #{password}, #{phone})
    </insert>
    <update id="update"></update>
    <delete id="delete"></delete>
    <select id="findTotalNum" resultType="java.lang.Integer"></select>
    <select id="findAll" resultType="indi.aby.docm.core.entity.UserEntity"></select>
    <select id="findById" resultType="indi.aby.docm.core.entity.UserEntity"></select>
    <select id="findByUsername" resultType="indi.aby.docm.core.entity.UserEntity">
        select * from t_user where username = #{username}
    </select>
</mapper>