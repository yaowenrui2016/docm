<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="indi.aby.docm.core.contract.AttachmentMapper">
    <resultMap id="AttachmentEntity" type="indi.aby.docm.core.contract.AttachmentEntity"
               extends="indi.rui.common.web.dao.IMapper.AbstractData">
        <result column="docm_id" property="docmId"/>
        <result column="doc_path" property="docPath"/>
        <result column="doc_name" property="docName"/>
        <result column="type" property="type"/>
        <result column="size" property="size"/>
        <result column="md5" property="md5"/>
    </resultMap>

    <insert id="add">
        insert into t_attachment(id, docm_id, doc_path, doc_name, type, size, md5) values
        <foreach collection="attachments" item="attachment" separator=",">
            (#{attachment.id}, #{attachment.docmId}, #{attachment.docPath}, #{attachment.docName}, #{attachment.type}, #{attachment.size}, #{attachment.md5})
        </foreach>
    </insert>

    <update id="update"></update>

    <delete id="deleteByDocmId">
        delete from t_attachment where docm_id = #{id}
    </delete>

    <delete id="delete">
        delete from t_attachment where id = #{id}
    </delete>

    <select id="findTotalNum" resultType="java.lang.Integer">
        select count(*) from t_attachment
    </select>

    <select id="findAll" resultMap="AttachmentEntity">
        select * from t_attachment
    </select>

    <select id="findById" resultMap="AttachmentEntity">
        select * from t_attachment where id = #{id}
    </select>

    <select id="findByDocmId" resultMap="AttachmentEntity">
        select * from t_attachment where docm_id = #{id}
    </select>

    <select id="findByPath" resultMap="AttachmentEntity">
        select * from t_attachment where doc_path = #{docPath} and doc_name = #{docName}
    </select>
</mapper>